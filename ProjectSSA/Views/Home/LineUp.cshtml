@model ProjectSSA.ViewModels.LineUpVM

@{
    ViewBag.Title = "LineUp";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>LineUp</h2>

<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        
        <th></th>
    </tr>

@foreach (var item in Model.Dates) {
    <tr>
@*        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>*@
        <td>@Html.ActionLink(@item.Date, "LineUp", new {SelectedDate = item.Date})</td>
    </tr>
}
    @if(Model.SelectedDate != null)
    {

    foreach (var item in Model.LineUps) {
    <tr>
        <td>@Html.DisplayFor(modelItem => item.Band)</td>
        <td>@Html.DisplayFor(modelItem => item.Stage)</td>
        <td>@Html.DisplayFor(modelItem => item.From)</td>
        <td>@Html.DisplayFor(modelItem => item.Until)</td>
    </tr>
    }
}

</table>
