@model ProjectSSA.ViewModels.OverzichtVM

@{
    ViewBag.Title = "Overzicht";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Overzicht</h2>

<h3>Overzicht per tickettype</h3>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TicketName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AvailableTickets)
        </th>
    </tr>

@foreach (var item in Model.AvailableTickets) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TicketName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AvailableTickets)
        </td>
    </tr>
}

</table>


<h3>Overzicht volledig lijst</h3>

<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Ticketholder)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TicketholderEmail)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TicketName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Amount)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.Tickets) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Ticketholder)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TicketholderEmail)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TicketName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Amount)
        </td>
    </tr>
}

</table>
